<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_about_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.michael.epa.AboutPage"
        android:weightSum="1">

            <ImageButton
            android:layout_height="400px"
            android:id="@+id/logo"
            android:background="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp" />

            <TextView
                android:text="About the Developers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAbout"
                android:textSize="34sp"
                android:textAlignment="center" />
        <!-- MICHAEL JONES-->
            <ImageView
                android:id="@+id/mjInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/mj"
                android:layout_weight="0.67"
                android:contentDescription="@string/image" />
            <TextView
                android:text="@string/mjText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMJ"
                android:textSize="34sp"
                android:textAlignment="center"
                                />
<!-- MICHAEL BAUMGARTEN-->
            <ImageView
                android:id="@+id/mbInfo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/mb"
                android:layout_weight="0.67"
                android:contentDescription="@string/image" />
            <TextView
                android:text="@string/mbText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMB"
                android:textSize="34sp"
                android:textAlignment="center"
                />
<!-- RACHEL BAUMGARTEN-->
        <ImageView
            android:id="@+id/rbInfo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/rb"
            android:layout_weight="0.67"
            android:contentDescription="@string/image" />

        <TextView
            android:text="@string/rbText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewRB"
            android:textSize="34sp"
            android:textAlignment="center"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <Button android:id="@+id/main_menu"
                android:layout_height="wrap_content"
                android:text="@string/main_menu"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.46" />

            <Button android:id="@+id/help"
                android:layout_height="wrap_content"
                android:text="@string/help"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.53" />

        </LinearLayout>

    </TableLayout>





</ScrollView>