<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_spot_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michael.epa.SpotPage">

    <TextView
        android:text="@string/spot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:id="@+id/spot_title"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:id="@+id/lot"
        android:layout_below="@+id/spot_title"
        android:layout_alignLeft="@+id/spot_title"
        android:layout_alignStart="@+id/spot_title"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/spot"
        android:layout_alignBaseline="@+id/lot"
        android:layout_alignBottom="@+id/lot"
        android:layout_alignRight="@+id/spot_title"
        android:layout_alignEnd="@+id/spot_title"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sorry"
        android:layout_alignBaseline="@+id/lot"
        android:layout_alignBottom="@+id/lot"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spot_id"
        android:textSize="36sp"
        android:layout_alignBaseline="@+id/lot_id"
        android:layout_alignBottom="@+id/lot_id"
        android:layout_alignLeft="@+id/spot"
        android:layout_alignStart="@+id/spot" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/lot_id"
        android:layout_marginTop="17dp"
        android:textSize="36sp"
        android:layout_below="@+id/lot"
        android:layout_toLeftOf="@+id/lot"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_width="wrap_content" />


</RelativeLayout>
