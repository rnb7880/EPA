<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michael.epa.MainMenu">

    <ImageButton
    android:layout_height="400px"
    android:id="@+id/logo"
    android:background="@drawable/logo"
    android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_buttons"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/find_spot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button android:id="@+id/help"
            android:layout_height="80dp"
            android:text="Help"
            android:layout_below="@+id/find_spot"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_weight="0.56"
            android:textSize="24sp" />

        <Button android:id="@+id/about"
            android:text="About"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/help"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
            android:layout_weight="0.46"
            android:layout_height="80dp"
            android:textSize="24sp" />
    </LinearLayout>

    <Button android:id="@+id/find_spot"
        android:layout_width="fill_parent"
        android:layout_marginTop="63dp"
        android:text="Find a Spot"
        android:textSize="44sp"
        android:layout_height="150dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
